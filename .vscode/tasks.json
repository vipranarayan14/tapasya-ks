{
    "version": "0.1.0",
    "isShellCommand": true,
    "showOutput": "silent",
    "args": [],

    "tasks": [
        {
            "taskName": "Fuse HTMLs",
            "suppressTaskName": true,
            "isBuildCommand": true,
            "command": "fuse",
            "args": ["-i", "prod/index.html", "-o", "index.html"]
        },
        {
            "taskName": "Complie LESSs",
            "suppressTaskName": true,
            "isBuildCommand": true,
            "command": "lessc",
            "args": ["--clean-css", "prod/styles/index.less", "prod/styles.css"]
        },
        {
            "taskName": "Purify CSS",
            "suppressTaskName": true,
            "isBuildCommand": true,
            "command": "purifycss",
            "args": ["prod/styles.css", "index.html", "script.min.js", "--min", "--info", "--out", "styles.min.css"]
        },
        {
            "taskName": "Uglify JSs",
            "suppressTaskName": true,
            "isBuildCommand": true,
            "command": "uglifyjs",
            "args": ["prod/scripts/hash-router.js", "prod/scripts/main.js", "-c", "-m", "-o", "script.min.js"]
        }
    ]
}