{
    "version": "2.0.0",
    "type": "shell",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
    },
    "tasks": [
        {
            "taskName": "Fuse HTMLs",
            "suppressTaskName": true,
            "command": "fuse -i prod/index.html -o index.html",
            "problemMatcher": []
        },
        {
            "taskName": "Complie LESSs",
            "suppressTaskName": true,
            "command": "lessc --clean-css prod/styles/index.less prod/styles.css",
            "problemMatcher": []
        },
        {
            "taskName": "Purify CSS",
            "suppressTaskName": true,
            "command": "purifycss prod/styles.css index.html script.min.js --min --info --out styles.min.css",
            "problemMatcher": []
        },
        {
            "taskName": "Uglify JSs",
            "suppressTaskName": true,
            "command": "uglifyjs prod/scripts/hash-router.js prod/scripts/main.js -c -m -o script.min.js",
            "problemMatcher": []
        }
    ]
}